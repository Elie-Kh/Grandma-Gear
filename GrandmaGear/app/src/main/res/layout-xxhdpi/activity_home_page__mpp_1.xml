<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient_Main_Lobby.HomePage_MPP_1">

    <ImageView
        android:id="@+id/imageView_Earth_MPP_1"
        android:layout_width="84dp"
        android:layout_height="79dp"
        android:layout_marginBottom="60dp"
        android:onClick="goToLocation"
        android:src="@drawable/earth2"
        app:layout_constraintBottom_toTopOf="@+id/locationSwitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_ProfilePicture_MPP_1"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/gg_default_pic"
        app:layout_constraintBottom_toTopOf="@+id/hrIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/textView_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/MPP_1_textView_Age"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_ProfilePicture_MPP_1"
        app:layout_constraintStart_toEndOf="@+id/imageView_ProfilePicture_MPP_1"
        app:layout_constraintTop_toBottomOf="@+id/textView_FullName" />

    <TextView
        android:id="@+id/textView_Height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:text="@string/MPP_1_textView_Height"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/textView_FullName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_FullName" />

    <TextView
        android:id="@+id/textView_Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:text="@string/MPP_1_textView_Weight"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_Age" />

    <TextView
        android:id="@+id/textViewFullName_Displayed_MPP_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/MPP_1_textView_FullName_Displayed"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/textView_FullName"
        app:layout_constraintStart_toEndOf="@+id/textView_FullName"
        app:layout_constraintTop_toTopOf="@+id/textView_FullName" />

    <TextView
        android:id="@+id/textView_Age_Displayed_MPP_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/MPP_1_textView_Age_Displayed"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Age"
        app:layout_constraintStart_toEndOf="@+id/textView_Age"
        app:layout_constraintTop_toTopOf="@+id/textView_Age" />

    <TextView
        android:id="@+id/textView_Height_Displayed_MPP_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/MPP_1_textView_Height_Displayed"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Height"
        app:layout_constraintStart_toEndOf="@+id/textView_Height"
        app:layout_constraintTop_toTopOf="@+id/textView_Height" />

    <TextView
        android:id="@+id/textView_Weight_Displayed_MPP_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/MPP_1_textView_Weight_Displayed"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Weight"
        app:layout_constraintStart_toEndOf="@+id/textView_Weight"
        app:layout_constraintTop_toTopOf="@+id/textView_Weight" />

    <TextView
        android:id="@+id/textView_FullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/MPP_1_textView_FullName"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/imageView_ProfilePicture_MPP_1"
        app:layout_constraintTop_toTopOf="@+id/imageView_ProfilePicture_MPP_1" />

    <Switch
        android:id="@+id/locationSwitch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="@string/MPP_S_Share_Location"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_BPM_Displayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:gravity="bottom"
        android:text="@string/MPP_1_textView_BPM_value"
        android:textColor="#000000"
        android:textSize="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hrIcon"
        app:layout_constraintTop_toBottomOf="@+id/textView_BPM_Title" />

    <TextView
        android:id="@+id/textView_BPM_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MPP_1_textView_BPM"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/hrIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hrIcon"
        app:layout_constraintTop_toTopOf="@+id/hrIcon" />

    <Button
        android:id="@+id/buttonPanic"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="@string/MPP_1_PanicButton"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="@drawable/custom_button3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_Earth_MPP_1"
        app:layout_constraintEnd_toStartOf="@+id/imageView_Earth_MPP_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_Earth_MPP_1" />

    <Button
        android:id="@+id/buttonReports"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/MPP_1_ReportsButton"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_button"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_Earth_MPP_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_Earth_MPP_1"
        app:layout_constraintTop_toTopOf="@+id/imageView_Earth_MPP_1" />

    <ImageView
        android:id="@+id/hrIcon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_Earth_MPP_1"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hr_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>