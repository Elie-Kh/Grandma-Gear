<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient_Main_Lobby.HomePage_MPP_1">

    <TextView
        android:id="@+id/textView_FullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/imageView_ProfilePicture_MPP_1"
        android:text="@string/MPP_1_textView_FullName" />

    <TextView
        android:id="@+id/textView_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_FullName"
        android:layout_alignStart="@+id/textView_FullName"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="@string/MPP_1_textView_Age" />

    <TextView
        android:id="@+id/textView_Height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_Age"
        android:layout_alignStart="@+id/textView_Age"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="@string/MPP_1_textView_Height" />

    <TextView
        android:id="@+id/textView_Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_Height"
        android:layout_alignStart="@+id/textView_Height"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="@string/MPP_1_textView_Weight" />

    <ImageView
        android:id="@+id/imageView_BatteryLevel_MPP_1"
        android:layout_width="187dp"
        android:layout_height="207dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:onClick="goToBatteryLevel_MPP_1_3"
        android:src="@drawable/battery" />

    <ImageView
        android:id="@+id/imageView_Heart_MPP_1"
        android:layout_width="202dp"
        android:layout_height="184dp"
        android:layout_above="@+id/imageView_BatteryLevel_MPP_1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/heart"
        android:onClick="goToHeartRate_MPP_1_1"/>

    <ImageView
        android:id="@+id/imageView_Earth_MPP_1"
        android:layout_width="178dp"
        android:layout_height="185dp"
        android:layout_alignBottom="@+id/imageView_Heart_MPP_1"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/imageView_Heart_MPP_1"
        android:src="@drawable/earth"
        android:onClick="goToLocation_MPP_1_2"/>

    <TextView
        android:id="@+id/textViewFullName_Displayed_MPP_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_FullName"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textView_FullName"
        android:text="@string/MPP_1_textView_FullName_Displayed" />

    <TextView
        android:id="@+id/textView_Age_Displayed_MPP_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_Age"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textView_Age"
        android:text="@string/MPP_1_textView_Age_Displayed" />

    <TextView
        android:id="@+id/textView_Height_Displayed_MPP_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_Height"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textView_Height"
        android:text="@string/MPP_1_textView_Height_Displayed" />

    <TextView
        android:id="@+id/textView_Weight_Displayed_MPP_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_Weight"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textView_Weight"
        android:text="@string/MPP_1_textView_Weight_Displayed" />

    <ImageView
        android:id="@+id/imageView_ProfilePicture_MPP_1"
        android:layout_width="174dp"
        android:layout_height="172dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/sooken" />

</RelativeLayout>